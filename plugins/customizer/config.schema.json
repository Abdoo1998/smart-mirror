{
    "schema": {
        "customizer": {
            "type": "object",
            "title": "Custom HTML Redering",
            "description" : "custom commands that render HTML",
            "properties": {
                "commands": {
                    "type": "array",
                    "title": "Custom Requests",
                    "items": {
                        "type": "object",
                        "properties": {
                          "utterance": {
                                "type": "string",
                                "title": "Utterance"
                            },  
                            "body": {
                                "type": "array",
                                "title": "HTML Body",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "tag": {
                                            "type": "string",
                                            "title": "Tag",
                                            "enum":[
                                                "h1",
                                                "h2",
                                                "h3",
                                                "h4"
                                            ]
                                        },
                                        "text": {
                                            "type": "textarea",
                                            "title": "Text"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "form": [
      
      {
        "type": "fieldset",
        "title": "HTML Customizer Settings",
        "expandable":false,
        "order":0,
        "items": [
             {
              "type":"help",
              "helpvalue":"<h6>Custom commands that render HTML</h6>"
            },
            {
              "type": "tabarray",
              "title": "<h4>Custom Commands</h4>",
              "items": [
                {
                  "type": "section",
                  "legend": "{{value}}",
                  "items": [
                    {
                      "key": "customizer.commands[].utterance",
                      "valueInLegend": true
                    },
                    {
                      "type":"tabarray",
                      "title":"Create Body Here:",
                      "items":[
                        {
                          "type":"section",
                          "legend": "{{(value.length>=8) ? value.slice(0,7)+'...' : value}}",
                          "items":[
                            {
                              "key":"customizer.commands[].body[].tag",
                              "titleMap":{
                                "h1":"Heading 1",
                                "h2":"Heading 2",
                                "h3":"Heading 3",
                                "h4":"Heading 4",
                                "p": "Paragraph",
                                "em":"Italics",
                                "strong":"Bold"
                              }
                            },
                            {
                              "key":"customizer.commands[].body[].text",
                              "valueInLegend": true
                            }
                          ]
                        }
                      ]
                    }
                  ]
              }
            ]
          }
        ]
      }
    ]
}
